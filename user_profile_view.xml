<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
  
	<!-- ===================== Create User Role List View ============================= -->
  
	<record id="create_user_tree" model="ir.ui.view">
      <field name="name">Users</field>
      <field name="model">manage.role</field>
      <field name="arch" type="xml">
        <tree string="Users">
          <field name="name" />
		  <field name="status" />
        </tree>
      </field>
    </record>
	
	<!-- ===================== Create User Profiles List View ============================= -->
  
	<record id="create_user_profiles_tree" model="ir.ui.view">
      <field name="name">Users Profile</field>
      <field name="model">user.profiles</field>
      <field name="arch" type="xml">
        <tree string="Users">
          <field name="name" />
		  <field name="sur_name" />
		  <field name="given_name" />
		  <field name="name_nric" />
		  <field name="user_name" />
        </tree>
      </field>
    </record>

	<!-- ========================= Create Users Roles Form View ============================= -->
	<record id="create_user_form" model="ir.ui.view">
      <field name="name">Create Users</field>
      <field name="model">manage.role</field>
      <field name="arch" type="xml">
        <form string="User" version="7.0">
          <sheet>
			<!-- <field name="image_medium" widget="image"  /> -->
              <group>
				  <div class="oe_title">
					<label for="name" class="oe_edit_only"/>
					<h1 style="width:380px;">
					  <field name="name" />
					</h1>
				  </div>
			  </group>
			  
			  <group style="width:280px;">
                  <div class="oe_title">
					<label for="status" class="oe_edit_only" />
					<h1 style="width:380px;">
					  <field name="status" style="width:220px;"/>
					</h1>
				  </div>
			  </group>
			  
			<notebook colspan="5" col="10">
				<page string="Pages and Actions">
					<h3>
					  <label string="Pages and Actions" readonly="context.get('ctx', False)" />
					</h3>
					<field name="pages_actions_tab" nolabel="1">
					  <tree string="List" editable="bottom">
						<field name="name" />
						<field name="view" />
						<field name="create" />
						<field name="update" />
					  </tree>
					</field>
				</page>
				
				<page string="Notifications">
					<h3>
					  <label string="Notifications" readonly="context.get('ctx', False)" />
					</h3>
					<field name="notification_tab" nolabel="1">
					  <tree string="List" editable="bottom">
						<field name="name" />
					  </tree>
					</field>
				</page>
				
				<page string="Documentations">
					<h3>
					  <label string="Documentations" readonly="context.get('ctx', False)" />
					</h3>
					<field name="documentation_tab" nolabel="1">
					  <tree string="List" editable="bottom">
						<field name="name" />
					  </tree>
					</field>
				</page>
			
			</notebook>
		  </sheet>
		</form>
	  </field>
	</record>
	
	<!-- ========================= Create Users Profile Form View ============================= -->
	
	<record id="users_pro" model="ir.ui.view">
      <field name="name">User Profile</field>
      <field name="model">user.profiles</field>
      <field name="arch" type="xml">
        <form string="User Profile" version="7.0">
          <sheet>
			<group class="col-10">
				<label string="User Profile" class="oe_edit_only" style="font-size:20px;"/>
			</group>
			<div class="col-10">
				<field name="image_medium" widget="image" class="oe_left oe_avatar" />
			</div>
			  
			<div class="col-2">
				<label for="name" class="oe_edit_only" />
				<h1>
				   <field name="name"/>
				</h1>
			</div>
			  
			<div class="clear" />
			<div class="col-3">
			  <label for="sur_name" />
			  <field name="sur_name" />
			</div>
			<div class="col-3">
			  <label for="given_name" />
			  <field name="given_name" />
			</div>
			<div class="col-3">
			  <label for="name_nric" />
			  <field name="name_nric" />
			</div>
			
			<div class="clear" />
			<div class="col-2" style="width:300px;">
				<label for="user_name" />
				<field name="user_name" />
				<label for="password" />
				<field name="password" />
			</div>
			
			<div class="col-2" style="width:300px;">
				<label for="status" />
				<field name="status" />
				<label for="role" />
				<field name="role" />
			</div>
			
			<notebook colspan="5" col="10">
			
				<page string="Personal Details">
					<h3>
					  <label string="Personal Details" readonly="context.get('ctx', False)" />
					</h3>
					<field name="profile_personal_tab" nolabel="1">
					  <tree string="List" editable="bottom">
						<field name="name" />
					  </tree>
					</field>
				</page>
			
				<page string="Pages and Actions">
					<h3>
					  <label string="Pages and Actions" readonly="context.get('ctx', False)" />
					</h3>
					<field name="profile_pages_actions_tab" nolabel="1">
					  <tree string="List" editable="bottom">
						<field name="name" />
						<field name="view" />
						<field name="create" />
						<field name="update" />
					  </tree>
					</field>
				</page>
				
				<page string="Notifications">
					<h3>
					  <label string="Notifications" readonly="context.get('ctx', False)" />
					</h3>
					<field name="profile_notification_tab" nolabel="1">
					  <tree string="List" editable="bottom">
						<field name="name" />
					  </tree>
					</field>
				</page>
				
				<page string="Documentations">
					<h3>
					  <label string="Documentations" readonly="context.get('ctx', False)" />
					</h3>
					<field name="profile_documentation_tab" nolabel="1">
					  <tree string="List" editable="bottom">
						<field name="name" />
					  </tree>
					</field>
				</page>
				
				<page string="History">
					<h3>
					  <label string="History" readonly="context.get('ctx', False)" />
					</h3>
					<field name="profile_history_tab" nolabel="1">
					  <tree string="List" editable="bottom">
						<field name="name" />
					  </tree>
					</field>
				</page>
			
			</notebook>
			
		  </sheet>
		</form>
	   </field>
	</record>
  
	<!-- ========================= Action Tabs ============================= -->
	
	<!-- Create Role -->
	<record model="ir.actions.act_window" id="users_roles">
      <field name="name">User Role</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">manage.role</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
	   <field name="view_id" ref="create_user_tree" />
      <field name="search_view_id" ref="view_settings_filter" />
		<field name="help" type="html">
		<p class="oe_view_nocontent_create">
			Click to create a user role.
		</p>
		</field>
    </record>
	
	<!-- Create Users -->
	<record model="ir.actions.act_window" id="profiles">
      <field name="name">User Profiles</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">user.profiles</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
	   <field name="view_id" ref="create_user_profiles_tree" />
      <field name="search_view_id" ref="view_settings_filter" />
		<field name="help" type="html">
		<p class="oe_view_nocontent_create">
			Click to create a user profiles.
		</p>
		</field>
    </record>
  
  
    <menuitem name="User Management" id="menu_user_management" parent="menu_lis_lab" />
		<menuitem name="Role" id="user_role" parent="menu_user_management" action="users_roles" />
		<menuitem name="User Profiles" id="user_profiles" parent="menu_user_management" action="profiles"/>
  </data>
</openerp>









