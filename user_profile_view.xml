<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
	
	<!-- ===================== Create User Profiles List View ============================= -->
  
	<record id="create_user_profiles_tree" model="ir.ui.view">
      <field name="name">Users Profile</field>
      <field name="model">user.profiles</field>
      <field name="arch" type="xml">
        <tree string="Users">
          <field name="name" />
		  <field name="sur_name" />
		  <field name="given_name" />
		  <field name="name_nric" />
		  <field name="user_name" />
        </tree>
      </field>
    </record>
	
	<!-- ========================= Create Users Profile Form View ============================= -->
	
	<record id="users_pro" model="ir.ui.view">
      <field name="name">Users</field>
      <field name="model">user.profiles</field>
      <field name="arch" type="xml">
        <form string="User Profile" version="7.0" duplicate="false">
          <sheet>
			<group class="col-10">
				<label string="User Profile" class="oe_edit_only" style="font-size:20px;"/>
			</group>
			<!--div class="col-10">
				<field name="image_medium" widget="image" class="oe_left oe_avatar" />
			</div-->
			<div class="col-2">
				<label for="name" class="oe_edit_only" />
				<h1>
				   <field name="name"/>   <!-- name ==> Name as in NRIC -->
				</h1>
			</div>
			<div class="col-35">
				<group col="4">
				
					<div attrs="{'invisible': [('user_status_display_1', 'in' , ('Active', 'Deactivated', 'Blocked', 'False'))]}">
						<div id="div_status2" class="openerp oe_form_readonly user_status_box">
							<div class="user_status_box_label">Status</div>
							<div class="user_status_box_status">
								<field name="user_status_display_1" readline="1" />
							</div>
						</div>
					</div>

					<div attrs="{'invisible': [('user_status_display_2', 'in' ,('Created', 'Deactivated', 'Blocked', 'False'))]}">
						<div id="div_status1" class="openerp oe_form_readonly user_status_box_1">
							<div class="user_status_box_label_1 ">Status</div>
							<div class="user_status_box_status_1">
								<field name="user_status_display_2" readline="1" />
							</div>
						</div>
					</div>
					
					<div attrs="{'invisible': [('user_status_display_3', 'in' ,('Created', 'Active', 'Blocked', 'False'))]}">
						<div id="div_status1" class="openerp oe_form_readonly user_status_box_2">
							<div class="user_status_box_label_2 ">Status</div>
							<div class="user_status_box_status_2">
								<field name="user_status_display_3" readline="1" />
							</div>
						</div>
					</div>

					<div attrs="{'invisible': [('user_status_display_4', 'in' ,('Created', 'Active', 'Deactivated', 'False'))]}">
						<div id="div_status1" class="openerp oe_form_readonly user_status_box_3">
							<div class="user_status_box_label_3 ">Status</div>
							<div class="user_status_box_status_3">
								<field name="user_status_display_4" readline="1" />
							</div>
						</div>
					</div>
				</group>
			</div>  
			<div class="clear" />
			<div class="col-3">
			  <label for="name_nric" />
			  <field name="name_nric" />  <!-- name_nric ==> Name -->
			</div>
			<div class="col-3">
			  <label for="sur_name" />
			  <field name="sur_name" />   <!-- sur_name ==> Sur Name -->
			</div>
			<div class="col-3">
			  <label for="given_name" />
			  <field name="given_name" />   <!-- given_name ==> Title -->
			</div>
			
			<div class="clear" />
			<div class="col-2" style="width:300px;">
				<label for="user_name" />
				<field name="user_name" />
				<label for="password" />
				<field name="password" />
			</div>
			
			<div class="col-2" style="width:300px;">
				<label for="status" />
				<field name="status" />
				<label for="role" />
				<field name="role" options="{'create': False, 'create_edit': False}"/>
			</div>
			
			<notebook colspan="5" col="10">
			
				<page string="Personal Details">
					<group>
						<div class="col-2" style="width:300px;">
							<h3>
								<label string="Personal Details" readonly="context.get('ctx', False)" />
							</h3>
							<group>
								<field name="nationality" style="width:280px;" />
								<field name="marital_status" style="width:280px;" />
								<field name="race" style="width:280px;" />
								<field name="gender" style="width:280px;" />
								<field name="birth_date" on_change="onchange_dob(birth_date)"/>
							</group>
						</div>
					</group>
					<div class="clear" />
					<div class="clear" />
					<group>
						<div class="col-2" style="width:300px;">
							<h3>
								<label string="Contact Details" readonly="context.get('ctx', False)" />
							</h3>
							<group>
								<field name="addr_1" style="width:280px;" placeholder="Address Line 1"/>
								<field name="addr_2" style="width:280px;" placeholder="Address Line 2"/>
								<field name="postal_code" style="width:280px;" placeholder="Postal Code"/>
								<field name="unit_no" style="width:280px;" />
								<field name="mobile_no" style="width:280px;" />
								<field name="landline_no" style="width:280px;" />
							</group>
						</div>
					</group>
				</page>
			
				<page string="Pages and Actions">
					<h3>
					  <label string="Pages and Actions" readonly="context.get('ctx', False)" />
					</h3>
					<field name="profile_pages_actions_tab" nolabel="1">
					  <tree string="List" editable="bottom">
						<field name="profile_items" />
						<field name="view" />
						<field name="create" />
						<field name="update" />
					  </tree>
					</field>
				</page>
				
				<page string="Notifications">
					<h3>
					  <label string="Notifications" readonly="context.get('ctx', False)" />
					</h3>
					<field name="profile_notification_tab" nolabel="1">
					  <tree string="List" editable="bottom">
						<field name="notification_items" />
						<field name="active" />
					  </tree>
					</field>
				</page>
				
				<page string="Documentations">
					<h3>
					  <label string="Documentations" readonly="context.get('ctx', False)" />
					</h3>
					<field name="profile_documentation_tab" nolabel="1">
					  <tree string="List" editable="bottom">
						<field name="documentation_items" />
						<field name="generate" />
						<field name="receive" />
					  </tree>
					</field>
				</page>
				
				<page string="History">
					<h3>
					  <label string="History" readonly="context.get('ctx', False)" />
					</h3>
					<field name="profile_history_tab" nolabel="1">
					  <tree string="List" editable="bottom">
						<field name="history_items" />
					  </tree>
					</field>
				</page>
			
			</notebook>
			
		  </sheet>
		</form>
	   </field>
	</record>
  
	<!-- ========================= Action Tabs ============================= -->
	
	<!-- Create Users -->
	<record model="ir.actions.act_window" id="profiles">
      <field name="name">User Profiles</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">user.profiles</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
	   <field name="view_id" ref="create_user_profiles_tree" />
      <field name="search_view_id" ref="view_settings_filter" />
		<field name="help" type="html">
		<p class="oe_view_nocontent_create">
			Click to create a user profiles.
		</p>
		</field>
    </record>
  
  
    <menuitem name="User Management" id="menu_user_management" parent="menu_lis_lab" />
		<menuitem name="User Profiles" id="user_profiles" parent="menu_user_management" action="profiles"/>
  </data>
</openerp>









