<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<!-- ===================== This is location form layout =============================-->
<record id="asset_form" model="ir.ui.view">
    <field name="name">asset.form</field>
    <field name="model">asset</field>
    <field name="arch" type="xml">
        <form string="test" version="7.0">
            <sheet>
                <group>
				<div class="oe_title">
					<label for="name" class="oe_edit_only"/>
					<h1 style="width:380px;">
						<field name = "name"/>
					</h1>
					<label for="asset_code" class="oe_edit_only"/>
					<h2 style="width:280px;">
						<field name = "asset_code"/>
					</h2>
				</div>
				</group>
	<notebook colspan="5" col="10">
    <page string="Asset Info">
      <field name='asset_line'  nolabel='1'>
	  <field name="priority">6</field>
		 <tree string='List' editable="bottom">
		   <field name ="sr_no"/>
		   <field name='brand'/>
		   <field name='model'/>
		   <field name='cost'/>
		   <field name='serial_number'/>
		   <field name='specs'/>
		   <field name='date_issue' on_change="onchange_issuedate(date_issue, date_stopped)"/>
		   <field name='date_stopped' on_change="onchange_stopeddate(date_stopped, date_issue)"/>
		</tree>
    </field>
	</page>

    <page string="Stock Level">
	<div>
	<group>
	  <field name="choose_asset_model" readonly="context.get('ctx', False)" style="width:180px;" options="{'create': False, 'create_edit': False}"/>
	</group>
	 <field name='stock_line'  nolabel='1' >
		 <tree string='List' editable="bottom">
		   <field name ="s_no"/>
		   <field name='location' options="{'create': False, 'create_edit': False}"/>
		   <field name='stock_level_date'/>
		   <field name='update_by'/>
		   <field name='current_stock'/>
		</tree>
    </field>
	</div>
	</page>
	<page string="History">
		<field name="history_line" readonly="context.get('ctx', False)" class="history_line">
			<tree string="History Order Lines" create="false" delete="false">
				<field name = "s_no"/>
				<field name = "date_created"/>
				<field name = "created_by"/>
				<field name = "last_update"/>
				<field name = "last_update_by"/>
				<field name = "date_status_change"/>
				<field name = "status_change_by"/>
				<field name = "changes"/>
			</tree>
		</field>
	</page>
	</notebook>
   </sheet>
        </form>
   </field>
</record>

   <record id="asset_tree" model="ir.ui.view">
            <field name="name">asset.tree</field>
            <field name="model">asset</field>
            <field name="arch" type="xml">
                <tree string="Location">
     <field name = "s_no"/>
     <field name = "name"/>
     <field name = "asset_code"/>
       </tree>
            </field>
        </record>
   <record id="view_asset_filter" model="ir.ui.view">
            <field name="name">Asset</field>
            <field name="model">asset</field>
            <field name="arch" type="xml">
                <search string="Test">
                    <field name="name" string="Asset"/>
     <field name="asset_code" string="Code"/>
            </search>
            </field>
        </record>
 


  <record model="ir.actions.act_window" id="action_asset">
            <field name="name">Asset</field>
   <field name="type">ir.actions.act_window</field>
            <field name="res_model">asset</field>
            <field name="view_type">form</field>
			<field name="limit">10</field>
            <field name="view_mode">tree,form</field>
   <field name="search_view_id" ref="view_asset_filter"/>
      <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to define a new Asset.
              </p>
            </field>
        </record>

<menuitem name = "Asset Screens" id = "asset" parent = "menu_sub2" action = "action_asset" />

</data> 
</openerp>