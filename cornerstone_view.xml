<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<!-- ===================== This is tree layout =============================-->
<record id="program_tree" model="ir.ui.view">
    <field name="name">Program</field>
    <field name="model">lis.program</field>
    <field name="arch" type="xml">
        <tree string="lab">
            <field name = "name"/>
            <field name = "program_code"/>
            <field name = "program_level"/>
	     	<field name = "program_duration"/>
			<field name = "program_fee"/>
        </tree>
    </field>
</record>
		 <record id="view_program_filter" model="ir.ui.view">
            <field name="name">Program</field>
            <field name="model">lis.program</field>
            <field name="arch" type="xml">
                <search string="Program">
                    <field name="name" string="Module"/>
					<field name="program_code" string="Code"/>
                </search>
            </field>
        </record>
<!-- ========================= Action Layout ============================= -->
<record id="action_program" model="ir.actions.act_window">
    <field name="name">Program</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">lis.program</field>
    <field name="view_type">form</field>
	<field name="limit">10</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="view_program_filter"/>
    <field name="view_id" ref="program_tree"/>
</record>


