										<field name = "location_name"/>
										<field name = "assign_date"/>
										<field name = "no_assign"/>
										<field name = "no_of_resp"/>
										<field name = "date_start"/>
										<field name = "date_schesule"/>
										<field name = "days_left"/>
									</tree>
						</field>
				</page>
				
				<page string="Assignment Outstanding">				
						<field name='assign_outstanding' nolabel='1'>
									<tree string='List' editable="bottom">
										<field name='assign_id' invisible="1" />
										<field name = "class_name"/>
										<field name = "class_code"/>
										<field name = "location_name"/>
										<field name = "assign_date"/>
										<field name = "no_assign"/>
										<field name = "no_of_resp"/>
										<field name = "date_start"/>
										<field name = "date_schesule"/>
										<field name = "days_left"/>
									</tree>
						</field>
				</page>
				
				</notebook>
			</sheet>
			</form>
		</field>
	</record>

